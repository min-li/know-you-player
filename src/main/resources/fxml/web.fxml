<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.web.WebView?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ml.minli.controller.WebController">
   <children>
      <BorderPane>
         <top>
            <ToolBar fx:id="tool" BorderPane.alignment="CENTER">
              <items>
                  <Label text="%play.url">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="url" />
                <Button mnemonicParsing="false" onAction="#view" text="%play.view">
                     <graphic>
                        <FontIcon iconColor="#28a745" iconLiteral="fas-location-arrow" />
                     </graphic></Button>
                  <Label text="%play.audioNameRule">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="audioNameRule" />
                  <Button mnemonicParsing="false" onAction="#analyseAudio" text="%play.analyseAudio">
                     <graphic>
                        <FontIcon iconColor="#00ccff" iconLiteral="fas-link" />
                     </graphic></Button>
              </items>
            </ToolBar>
         </top>
         <center>
            <WebView fx:id="web" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</StackPane>
